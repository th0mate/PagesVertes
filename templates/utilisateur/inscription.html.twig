{% extends 'base.html.twig' %}

{% block page_title %}
    Pages Vertes | Inscription
{% endblock %}

{% block page_content %}
    <main>
    {{ form_start(formInscription, {'attr': {'class': 'center basic-form'}}) }}
    <fieldset>
        <legend>Inscription</legend>
        <div>
            <!-- Affichage du label "Login" -->
            {{ form_label(formInscription.login) }}
            <p class="help-input-form">Entre 4 et 20 caractères</p>
            <!-- Affichage de l'input du login -->
            {{ form_widget(formInscription.login) }}
        </div>
        <div>
            <!-- Affichage du label "Mot de passe" -->
            {{ form_label(formInscription.plainPassword) }}
            <p class="help-input-form">Entre 8 et 30 caractères, au moins une minuscule, une majuscule et un nombre</p>
            <!-- Affichage de l'input du mot de passe -->
            {{ form_widget(formInscription.plainPassword)}}
        </div>
        <div>
            <!-- Affichage du label "Adresse mail" -->
            {{ form_label(formInscription.adresseEmail)}}
            <!-- Affichage de l'input de l'adresse email -->
            {{ form_widget(formInscription.adresseEmail) }}
        </div>
        <div>
            {{ form_label(formInscription.code) }}
            {{ form_widget(formInscription.code) }}

            {{ form_label(formInscription.estVisible) }}
            {{ form_widget(formInscription.estVisible) }}

        </div>
        <!-- Affichage du bouton d'envoi, contenant le texte (label) "S'inscrire" -->
        {{ form_widget(formInscription.inscription, {'label':'S\'inscrire', 'attr': {'class': 'basic-form-submit'}}) }}
    </fieldset>
    {{ form_rest(formInscription) }}
    {{ form_end(formInscription) }}
</main>
{% endblock %}