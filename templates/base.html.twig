<!DOCTYPE html>
<html lang="fr">
<head>
    <title>{% block page_title %}{% endblock %}</title>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="{{ asset('css/base.css') }}">
    {% block cssSupplementaire %}{% endblock %}
    <link rel="icon" type="image/png" href="{{ asset('img/favicon.png') }}">
</head>
<body>

<div class="flash" id="flash">

    {% for message in app.flashes('success') %}
        <div class='alert alert-success'>
            <img src='{{ asset("img/success.png") }}' alt='icone'>
            <p>{{ message }}</p>
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class='alert alert-warning'>
            <img src='{{ asset("img/warning.png") }}' alt='icone'>
            <p>{{ message }}</p>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class='alert alert-danger'>
            <img src='{{ asset("img/danger.png") }}' alt='icone'>
            <p>{{ message }}</p>
        </div>
    {% endfor %}

    {% for message in app.flashes('info') %}
        <div class='alert alert-info'>
            <img src='{{ asset("img/info.png") }}' alt='icone'>
            <p>{{ message }}</p>
        </div>
    {% endfor %}

</div>


<div class="separator">

    <div class="bandeau">

        <img src="{{ asset('img/logo.png') }}" alt="">

        <div class="wrapElements">

            <a class="element{% if page_actuelle == 'Accueil' %} active {% endif %}" href="{{ path('pages_vertes') }}">
                <img src="{{ asset('img/accueil.png') }}" alt="">
                <p>Accueil</p>
            </a>

            <a class="element{% if page_actuelle == 'Search' %} active {% endif %}" href="{{ path('pages_vertes') }}">
                <img src="{{ asset('img/utilisateur.png') }}" alt="">
                <p>Parcourir</p>
            </a>

            <a class="element {% if page_actuelle == 'Credits' %} active {% endif %}" href="{{ path('credits') }}">
                <img src="{{ asset('img/credits.png') }}" alt="">
                <p>Crédits</p>
            </a>

            {% if is_granted('ROLE_USER') %}
                <a class="element {% if page_actuelle == 'Profil' %} active {% endif %}">
                    <img src="{{ asset('img/utilisateur.png') }}" alt="">
                    <p>Mon profil</p>
                </a>
            {% endif %}

        </div>

        <div class="actionsUtilisateur">
            {% if not is_granted('ROLE_USER') %}
                <a class="element{% if page_actuelle == 'Connexion' %} active {% endif %}" >
                    <img src="{{ asset('img/profil.png') }}" alt="">
                    <p>Connexion</p>
                </a>
                <a class="element {% if page_actuelle == 'Inscription' %} active {% endif %}">
                    <img src="{{ asset('img/inscription.png') }}" alt="">
                    <p>Inscription</p>
                </a>
            {% else %}
                <a class="element{% if page_actuelle == 'Deconnexion' %} active {% endif %}">
                    <img src="{{ asset('img/se-deconnecter.png') }}" alt="">
                    <p>Déconnexion</p>
                </a>
            {% endif %}
        </div>


    </div>

    <div class="other">
        {% block page_content %}
        {% endblock %}
    </div>

</div>

</body>
</html>